n=5
p=1                                      #increasing pyramid 
for i in range(n):                     
    p=1                                   
    for j in range(i+1):                  
        print(p, end=" ")                  
        p+=1
    print()
for i in range(n):
    for j in range(n-i):
        print(" ", end=" ")
    p=i+1
    for j in range(i+1):
        print(p, end=" ")
        p-=1   
    p+=2 
    for j in range(i):                   
        print(p, end=" ")                  
        p+=1        
    print()

------------------------------------------------------------------------------------------------------------------------
n=5
for i in range(n):
    for j in range(i+1):
        print(" ", end=" ")
    p=i+1
    #    
    # p+=1                                      decreasing digits pyramid
     
    for j in range(n-i):                   
        print(p, end=" ")                  
        p+=1 
    p = n-1
    for j in range(n-(i+1)):
        print(p, end=" ")
        p-=1       
    print()
