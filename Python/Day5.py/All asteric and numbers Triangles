n=5
p=1
for i in range(n):
    for j in range(i+1):
        print(" ", end=" ")
    for j in range(n-i):
        print(p, end=" ")
    p+=1
    print()
-------------------------------------------------------------------------------------------------------------------
n=5
p=1
for i in range(n):
    for j in range(n-i):
        print(" ", end=" ")
    for j in range(i):                    # increasing pyramid
        print(p, end=" ")
    for j in range(i+1):
        print(p, end=" ")
    p+=1
    print()
--------------------------------------------------------------------------------------------------------------------
n=5
p=5
for i in range(n):
    for j in range(i+1):
        print(" ", end=" ")
    for j in range(n-(i+1)):
        print(p, end=" ")
    for j in range(n-i):
        print(p, end=" ")
    p-=1
    print()
----------------------------------------------------------------------------------------------------------------------
n=5
# p=1
for i in range(n):
    for j in range(i+1):
        print(" ", end=" ")
    p=i+1
    for j in range(n-i):
        print(p, end=" ")
        p+=1
    
    print()
